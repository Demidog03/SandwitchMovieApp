<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cronocode.moviecatalog">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieCatalog">

        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/title_activity_authorization"
            android:theme="@style/Theme.MovieCatalog.NoActionBar" />
        <activity
            android:name=".movie_list_top_rated"
            android:exported="false"
            android:label="@string/title_activity_authorization"
            android:theme="@style/Theme.MovieCatalog.NoActionBar"/>
        <activity
            android:name=".movie_list_popular"
            android:exported="false"
            android:label="@string/title_activity_authorization"
            android:theme="@style/Theme.MovieCatalog.NoActionBar"/>
        <activity android:name=".Authorization"
            android:exported="true"
            android:label="@string/title_activity_authorization"
            android:theme="@style/Theme.MovieCatalog.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>