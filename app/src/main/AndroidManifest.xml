<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cronocode.moviecatalog">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieCatalog"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activities.Detail"
            android:exported="false" />
        <activity
            android:name=".activities.DetailAdapter"
            android:exported="false" />
        <activity
            android:name=".activities.Profile"
            android:exported="false" />
        <activity
            android:name=".activities.movie_list_now_playing"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MovieCatalog.NoActionBar" />
        <activity
            android:name=".activities.movie_list_top_rated"
            android:exported="true"
            android:theme="@style/Theme.MovieCatalog.NoActionBar" />
        <activity
            android:name=".activities.movie_list_upcoming"
            android:exported="true"
            android:theme="@style/Theme.MovieCatalog.NoActionBar" />
        <activity
            android:name=".activities.Authorization"
            android:exported="true"
            android:theme="@style/Theme.MovieCatalog.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.registration"
            android:exported="true" />
        <activity
            android:name=".activities.login"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>